@using ServiceTrackingAutomation.Domain.Enums
@model ServiceTrackingAutomation.Domain.Entities.User

@{
    ViewData["Title"] = "Create";
}

<h2>Kullanıcı Oluştur</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EncryptedPassword" class="control-label"></label>
                <input asp-for="EncryptedPassword" class="form-control" />
                <span asp-validation-for="EncryptedPassword" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="RoleString" class="control-label"></label>
                <select asp-for="Role">
                    <option value="-1" disabled selected="">Rol Seçiniz</option>

                    @foreach (var role in Enum.GetValues(typeof(RoleType)))
                    {
                        <option value="@((int)role)">@role</option>
                    }
                </select>
                <span asp-validation-for="RoleString" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="List">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
