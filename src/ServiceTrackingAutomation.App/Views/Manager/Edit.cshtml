@using ServiceTrackingAutomation.Domain.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ServiceTrackingAutomation.Domain.Entities.User

@{
    ViewData["Title"] = "Edit";
}


<h2>Kullanıcı Düzenle</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly="" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br />
            

            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <br />
            
            <div class="form-group">
                <label asp-for="RoleString" class="control-label"></label>
                <select asp-for="Role">
                    <option value="-1" disabled>Rol Seçiniz</option>

                    @foreach (var role in Enum.GetValues(typeof(RoleType)))
                    {
                        <option value="@((int)role)">@role</option>
                    }
                </select>
                <span asp-validation-for="RoleString" class="text-danger"></span>
            </div>
            <br />



            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="List">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
