@model ServiceTrackingAutomation.Domain.Models.ServiceUpdateModel

@{
    ViewData["Title"] = "SentToService";
}


<h2>Şikayet Güncelle : Servise Yollandı</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SentToService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComplaintId" class="control-label"></label>
                <input asp-for="ComplaintId" readonly class="form-control" />
                <span asp-validation-for="ComplaintId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" readonly class="form-control" rows="5"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" readonly class="form-control" rows="5"> </textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ServiceNote" class="control-label"></label>
                <textarea asp-for="ServiceNote" class="form-control" rows="5"> </textarea>

                <span asp-validation-for="ServiceNote" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="List">Listeye Dön</a>
</div>

