@model ServiceTrackingAutomation.Domain.Models.CreateComplaintModel

@{
    ViewData["Title"] = "Create";
}


<h2>Şikayet Oluştur</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Dto.CustomerId" class="control-label"></label>
                <select class="form-control" asp-for="Dto.CustomerId">
                    <option value="-1" selected disabled >Müşteri Seçiniz</option>
                    @foreach (var item in Model.Customers)
                    {
                        <option value="@item.Id" >@item.Name : @item.PhoneNumber</option>
                    }
                </select>
                <span asp-validation-for="Dto.CustomerId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Dto.Description" class="control-label"></label>
                <textarea rows="10" asp-for="Dto.Description" class="form-control" ></textarea>
                <span asp-validation-for="Dto.Description" class="text-danger"></span>
            </div>
            
            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="List">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
