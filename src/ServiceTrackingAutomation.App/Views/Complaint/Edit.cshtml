@model ServiceTrackingAutomation.Domain.Entities.Complaint

@{
    ViewData["Title"] = "Edit";
}


<h2>Şikayet Düzenle</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input readonly value="@Model.Customer?.Name : @Model.Customer?.PhoneNumber" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="10" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea rows="5" asp-for="Note" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <br />
            
            <div class="form-group">
                <label asp-for="SentToCustomerDate" class="control-label"></label>
                <input asp-for="SentToCustomerDate" class="form-control" />
                <span asp-validation-for="SentToCustomerDate" class="text-danger"></span>
            </div>
            @*<br />
            <div class="form-group">
                <label asp-for="CustomerReceivedDate" class="control-label"></label>
                <input asp-for="CustomerReceivedDate" class="form-control" />
                <span asp-validation-for="CustomerReceivedDate" class="text-danger"></span>
            </div>*@
            <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="List">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
